@model List<lab2.Models.Booking>

@{
    ViewData["Title"] = "Мої бронювання";
    Layout = null;
}

<a asp-controller="Home" asp-action="Index">← Назад на головну</a>

<h1>Мої бронювання</h1>

@if (Model.Count == 0)
{
    <p>У вас поки немає бронювань.</p>
}
else
{
    foreach (var b in Model)
    {
        <div style="border: 1px solid #aaa; padding: 10px; margin-bottom: 10px;">
            <strong>Поїздка до: @b.Trip.Destination.Name</strong><br />
            <strong>Дата: @b.Trip.Date.ToString()</strong><br />
            <strong>Ціна: @b.Trip.Price.ToString()</strong><br />
            <strong>Заброньовано: @b.BookingDate.ToString("g")</strong><br />

            <form asp-action="Delete" asp-controller="Bookings" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@b.Id" />
                <button type="submit">❌ Видалити</button>
            </form>
        </div>
    }
}
